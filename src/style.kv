<LoginWin>
    name: 'loginwin'
    MDFloatLayout:
        MDTextField:
            id: serverEntry
            hint_text: "Servidor"
            text: 'localhost'
            # icon: "server"
            pos_hint: {"center_x": .5, "center_y": .6}
            size_hint_x: .6

        MDTextField:
            id: uidEntry
            text: "Usuario"
            # icon: "account"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .6

        MDRectangleFlatIconButton:
            # style: "outlined"
            pos_hint: {"center_x": .5, "center_y": .35}
            text: 'Conectar'
            icon: "connection"
            on_release: 
                app.connServer(serverEntry.text, uidEntry.text)

<MainWin>
    name: 'mainwin'
    MDFloatLayout:
        MDTextField:
            id: msgEntry
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .6
            hint_text: "Mensagem"
            # icon: "chat"

        MDRectangleFlatIconButton:
            # style: "outlined"
            pos_hint: {"center_x": .5, "center_y": .4}
            text: 'Enviar'
            icon: "send"
            on_release: 
                app.enviarMsg(msgEntry.text)
